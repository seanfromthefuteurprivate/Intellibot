[Unit]
Description=WSB Snake Dashboard API
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/Intellibot/dashboard/api
Environment=PYTHONPATH=/root/Intellibot
ExecStart=/usr/bin/uvicorn main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
